{
  "name": "b-logger",
  "version": "0.1.0",
  "private": true,
  "description": "Blog project monorepo",
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "workspaces": [
    "frontend/*"
  ],
  "scripts": {
    "openapi:swagger": "cargo run -p blogger-scripts --bin generate-openapi",
    "openapi:ts": "npx openapi-typescript frontend/lib/swagger.json -o frontend/lib/api.ts",
    "api:dev": "cargo run --bin blogger-api",
    "api:generate": "npm-run-all openapi:swagger openapi:ts api:dev",
    "dev": "concurrently \"npm:web -w blogger-web\" \"npm:admin -w blogger-admin\"",
    "build": "npm run build --workspaces --if-present",
    "preview": "npm run preview --workspaces --if-present",
    "test": "npm run test:unit --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "openapi-fetch": "^0.14.1",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "vuetify": "^3.10.4"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.33.0",
    "eslint-plugin-vue": "~10.4.0",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "npm-run-all": "^4.1.5",
    "npm-run-all2": "^8.0.4",
    "openapi-typescript": "^7.4.4",
    "prettier": "3.6.2",
    "toml": "^3.0.0",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vite-plugin-vuetify": "^2.0.4",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.0"
  }
}
